<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      間違いが<%= pluralize(object.errors.count, "error") %>個あります
    </div>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>