<%= form_with(model: @user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :name, '名前' %>
  <%= f.text_field :name , class: 'btn' %>

  <%= f.label :email, 'メールアドレス' %>
  <%= f.email_field :email , class: 'btn' %>
  
  <%= f.label :password, 'パスワード' %>
  <%= f.password_field :password , class: 'btn' %>
  
  <%= f.label :password_confirmation, 'パスワード確認用' %>
  <%= f.password_field :password_confirmation , class: 'btn' %>

  <%= f.submit '編集完了' %>
<% end %>