<div class="main_wrapper">
  <div class="main_inner">
    <section class="user_name">
      <h1><%= @user.name %></h1>
    </section>
    <section class="follow_form">
      <%= render 'follow_form' if logged_in? %>
    </section>
    <% if @user.microposts.any? %>
      <h3>投稿数 (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>