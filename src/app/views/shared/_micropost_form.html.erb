<%= form_with(model: @micropost, class: "micropost_form") do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="micropost_form_item">
    <%= f.text_area :content, class: "micropost_textarea", placeholder: "ここに投稿内容を記入..." %>
    <div class="micropost_select">
      <%= f.select :study_time_hour, (0..12).to_a, prompt: "時間", class: "time_select" %>
      <%= f.select :study_time_minute, ['00', 5, 10, 15, 20, 25, 30, 35, 35, 40, 45, 50, 55], prompt: "分", class: "time_select" %>
    </div>
    <%= f.submit "投稿する", class: "btn-primary" %>
  </div>
  <div class="micropost_form_image">
    <%= f.file_field :image, class: "micropost_form_image_select", accept: "image/jpeg,image/gif,image/png" %>
  </div>
<% end %>